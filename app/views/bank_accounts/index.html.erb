<div class="container">
  <div class="mt-6">
    <h2>Tus Bancos</h2>

    <% @banks.each do |bank| %>
      <div class="baige-rounded-box-scaled align-center mx-auto">
        <%= link_to bank.name, bank_account_path(bank), class: "link-black"  %>
      </div>
    <% end %>

    <div class="mt-3">
      <%= link_to "Agregar cuenta Fintoc", new_fintoc_account_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
