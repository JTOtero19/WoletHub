<div class="container mt-5">
  <%= simple_form_for(@movement) do |f| %>
    # Elige el banco y la cuenta.
    <%= f.select :bank_account, @bank.map { |bank| [bank.name, bank.id] }, {}, { id: "bankSelector" } %>
    <%= f.select :fintoc_account, @fintoc_accounts.map { |account| [account.name, account.id] }, {}, { id: "accountSelector" } %>

    # Muestra el balance de la cuenta seleccionada.
    <div id="accountBalance"></div>

    # Elige la cantidad a transferir.
    <%= f.input :amount, label: "Cuanto deseas transferir? ($)", class: "form-control" %>

    # Detalles del nuevo receptor.
    <%= f.simple_fields_for :recipient_account do |ra| %>
      <%= ra.input :name, label: "Nombre del receptor", id: "newRecipientName" %>
      <%= ra.input :account_number, label: "NÃºmero de cuenta del receptor", id: "newRecipientAccountNumber" %>
    <% end %>

    # Confirma la transferencia.
    <%= f.submit "Confirma transferencia", class: "btn btn-primary mt-3" %>
  <% end %>
</div>
