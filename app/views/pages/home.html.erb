  <div class="container p-5">
    <div class="row">

      <!-- Subcontainer 1: Logo -->
      <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
        <%= link_to "/", class: "navbar-brand" do %>
          <%= image_tag "WoletHub negro.svg", class: "logo", alt: "Logo" %>
        <% end %>
