<div class="container">
  <!-- <a href=" https://webview.fintoc.com/widget?public_key=pk_test_xwUGiHD3-zsftKEioAvCGjAk6qQrTS65&holder_type=individual&product=payments&country=cl&widget_token=pi_eXp1RgSrrpXzwWbo_sec_243qdULijvvD9Tc4fo6FGz6F -->
  <!-- ">Pagar transacción</a> -->
  <div id="pie_chart" class="mx-auto my-4">
    <%= pie_chart @balances_data %>
  </div>

  <div class="my-4">
    <% @banks.each do |bank| %>
      <div class="baige-rounded-box d-flex justify-between mx-auto">
        <div>
          <h5><%= link_to bank.name, bank_account_path(bank) %></h5>
        </div>
        <div>
          <% bank.fintoc_accounts.each do |fintoc| %>
            <h5>$<%= fintoc.balance.available %></h5>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="my-4">
    <h3>Transacciones Recientes</h3>

          <div class="table-responsive small my-4">
            <table class="table table-striped table-sm">
              <thead>
                <tr>
                  <th scope="col">ID</th>
                  <th scope="col">Monto</th>
                  <th scope="col">Moneda</th>
                  <th scope="col">Descripción</th>

                </tr>
              </thead>
              <tbody>
                  <% @recent.each do |movement| %>
                    <tr>
                      <td><%= movement['id'] %></td>
                      <td>$<%= movement['amount'] %></td>
                      <td><%= movement['currency'] %></td>
                      <td><%= movement['description'] %></td>
                    </tr>
                  <% end %>

              </tbody>
            </table>
          </div>
    </div>


  <h3 class="align-items-center">Favoritos</h3>
  <% @favorites.each do |favorite| %>
    <div class="baige-rounded-box-scaled align-center mx-auto">
      <%= favorite.recipient_account.holder_name %>
    </div>
  <% end %>

</div>
