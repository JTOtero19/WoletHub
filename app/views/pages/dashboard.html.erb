<div class="container">
  <!-- <a href=" https://webview.fintoc.com/widget?public_key=pk_test_xwUGiHD3-zsftKEioAvCGjAk6qQrTS65&holder_type=individual&product=payments&country=cl&widget_token=pi_eXp1RgSrrpXzwWbo_sec_243qdULijvvD9Tc4fo6FGz6F -->
  <!-- ">Pagar transacción</a> -->
  <div id="pie_chart" class="mx-auto my-4">
    <%= pie_chart @balances_data, colors: ["#8E43ED", "#d3b5f8", "#7216e6", "#f1e8fd", "#440d89"] %>
  </div>

  <div class="my-4">
    <% @banks.each do |bank| %>
      <%= link_to bank_accounts_path(bank), class: "link-black" do %>
        <div class="baige-rounded-box d-flex justify-between mx-auto" data-controller="clickableDiv">
          <div>
            <h5><%= bank.name %></h5>
          </div>
          <div>
            <% bank.fintoc_accounts.each do |fintoc| %>
              <h5>$<%= number_with_delimiter(fintoc.balance.available, delimiter: ".", separator: ",") %></h5>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>



  <div class="my-4">
    <div class="ml-5 d-flex justify-content-center">
      <h3>Transacciones Recientes</h3>
    </div>
      <div class="table-responsive small my-4">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Monto</th>
              <th scope="col">Moneda</th>
              <th scope="col">Descripción</th>

            </tr>
          </thead>
          <tbody>
              <% @recent.each do |movement| %>
                <tr>
                  <td><%= movement['id'] %></td>
                  <td>$<%= number_with_delimiter(movement['amount'], delimiter: ".", separator: ",") %></td>
                  <td><%= movement['currency'] %></td>
                  <td><%= movement['description'] %></td>
                </tr>
              <% end %>

          </tbody>
        </table>
      </div>
    </div>




</div>
